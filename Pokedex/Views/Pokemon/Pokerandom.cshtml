
@{
  ViewBag.Title = "Pokerandom";
}

<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <div class="row">
        <div class="col-md-1">
          <h3>#@ViewBag.Pokemon.id</h3>
        </div>
        <div class="col-md-4">
          <h1>@ViewBag.Pokemon.name </h1>
        </div>
        <div class="col-md-3">
          @foreach (var sprite in ViewBag.Pokemon.sprites)
           {
              @if (sprite.Key == "front_default")
               {
                <a href="#" class="thumbnail">
                  <img src=@ViewBag.Pokemon.sprite alt="Alternate Text" />
                </a>
               }
           }
           <div class="panel panel-default">
             <div class="panel-heading">
               <h3 class="panel-title">Abilities</h3>
             </div>
             <ul class="list-group">
               @foreach (var set in ViewBag.Pokemon.abilities)
                {
                 <li class="list-group-item">@set.ability["name"]</li>
                }
             </ul>   
          </div>
        </div>
      </div>
      <div class="row">
        <h2>Stats</h2>
        <div class="row">
          @foreach (var block in ViewBag.Pokemon.stats)
            {
            <div class="col-sm-12 col-md-6 col-lg-6">
              <ul>
                <li class="list-group-item">@block.stat["name"]: @block.base_stat</li>
              </ul>
            </div>
            }
            <div class="col-md-6 col-sm-12">
            <ul>
              <li class="list-group-item">Height: @ViewBag.Pokemon.height </li>
            </ul>
            <ul>
              <li class="list-group-item">Weight: @ViewBag.Pokemon.weight g</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="row" id="moveset">
        <h2>Moves</h2>
        @foreach (var move in ViewBag.Pokemon.moves)
        {
          <div class="col-sm-12 col-md-6 col-lg-4">
            <ul class="list-group">
              <li class="list-group-item">@move.move["name"]: @move.move["effect"]</li>
            </ul>
          </div>
        }

      </div>
      <div class="row">
        <div class="col-md-6">
          <form asp-controller="Pokemon" asp-action="Pokerandom">
            <p><button class="btn btn-primary btn-lg" href="#" type="submit">Random Pokemon</button></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


