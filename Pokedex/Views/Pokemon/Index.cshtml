
@{
    ViewData["Title"] = "Index";
}
@model Pokedex.Models.Pokemon.PokeNameForm

<h2>Index</h2>
<div class="row">
  <div class="col-md-4">
    <form asp-controller="Pokemon" asp-action="Pokesolo">
      <div class="input-group">
        <input asp-for="Name" type="text" class="form-control" placeholder="Pokemon..." />
        <span class="input-group-btn">
          <button class="btn btn-primary" type="submit">Search</button>
        </span>
      </div>
    </form>
  </div>
  <div class="col-md-4">
    <form asp-action="Pokerandom" asp-controller="Pokemon">
      <button type="submit" class="btn btn-default">Random Pokemon</button>
    </form>
  </div>
  <div class="col-md-4">
    <a asp-controller="Pokemon" asp-action="PokeSearch" class="btn btn-warning" role="button">Advanced Randomizer</a>
  </div>
</div>


